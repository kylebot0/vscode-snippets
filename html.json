{
    // Place your snippets for html here. Each snippet is defined under a snippet name and has a prefix, body and 
    // description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
    // $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
    // same ids are connected.
    // Example:
    // "Print to console": {
    // 	"prefix": "log",
    // 	"body": [
    // 		"console.log('$1');",
    // 		"$2"
    // 	],
    // 	"description": "Log output to console"
    // }
    "php": {
        "prefix": "phpi",
        "body": ["<?php", "\t$0", "?>"],
        "description": "php tag"
    },
    "php short": {
        "prefix": "php",
        "body": ["<?php $1 ?>"],
        "description": "php tag"
    },
    "php if empty": {
        "prefix": "phpif",
        "body": [
            "<?php", "\tif( !empty($1) ) {", "\t}", "?>"
        ],
        "description": "php if statement if empty"
    },
    "php esc_html": {
        "prefix": "phpeh",
        "body": [
            "<?php echo esc_html($1) ?>"
        ],
        "description": "php esc_html"
    },
    "php esc_attr": {
        "prefix": "phpea",
        "body": [
            "<?php echo esc_attr($1) ?>"
        ],
        "description": "php esc_attr"
    },
    "php echo": {
        "prefix": "phpe",
        "body": [
            "<?php echo $1 ?>"
        ],
        "description": "php echo"
    },
    "php image": {
        "prefix": "phpimg",
        "body": [
            "<?php echo generate_picture($1) ?>"
        ],
        "description": "php generate picture"
    },
    "php esc php": {
        "prefix": "escphp",
        "body": [
            "?>", "\t$1", "<?php"
        ],
        "description": "php esc php"
    },
}
